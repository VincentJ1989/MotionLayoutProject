<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.RoomActivity">


    <TextView
        android:id="@+id/room_create_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create"
        android:textSize="24sp"
        android:gravity="center"
        android:padding="4dip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/room_delete_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:textSize="24sp"
        android:gravity="center"
        android:padding="4dip"
        app:layout_constraintTop_toBottomOf="@id/room_create_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/room_query_all_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="QueryAll"
        android:textSize="24sp"
        android:gravity="center"
        android:padding="4dip"
        app:layout_constraintTop_toBottomOf="@id/room_delete_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/room_query_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Query"
        android:textSize="24sp"
        android:gravity="center"
        android:padding="4dip"
        app:layout_constraintTop_toBottomOf="@id/room_query_all_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/room_update_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update"
        android:textSize="24sp"
        android:gravity="center"
        android:padding="4dip"
        app:layout_constraintTop_toBottomOf="@id/room_query_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>